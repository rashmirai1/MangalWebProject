@model IList<MangalWebProject.Models.Entity.tblfinancialyear>
@using MangalWebProject.Models.Entity
<div class="modal-content">
    <div class="modal-body" style="height:inherit; overflow:auto;">
        <div class="panel-body panel-no-padding" style="height:inherit; overflow:auto;">
            <div id="demo">
                <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover table-fixed-header m0" id="example">
                    <thead>
                        <tr>
                            <th>Financial Year From</th>
                            <th>Financial Year To</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (tblfinancialyear item in Model)
                        {
                            <tr class="gradeX" onclick='window.document.location="/FinancialYear/GetFinancialYearById?ID=@item.FinancialyearID"'>
                                <td>@item.Financialyearfrom.ToShortDateString()</td>
                                <td>@item.Financialyearto.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div><!-- /.modal-content -->

