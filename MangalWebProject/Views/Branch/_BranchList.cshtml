@model IList<MangalWebProject.Models.BranchViewModel>
@using MangalWebProject.Models
<div class="modal-content">
    <div class="modal-body" style="height:inherit; overflow:auto;">
        <div class="panel-body panel-no-padding" style="height:inherit; overflow:auto;">
            <div id="demo">
                <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover table-fixed-header m0" id="example">
                    <thead>
                        <tr>
                            <th>Branch Name</th>
                            <th>Branch Code</th>
                            <th>Inception Date</th>
                            <th>Date w.e.f.</th>
                            <th>Pincode</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (BranchViewModel item in Model)
                        {
                            <tr class="gradeX" onclick='window.document.location="/Branch/GetBranchById?ID=@item.ID"'>
                                <td>@item.BranchName</td>
                                <td>@item.BranchCode</td>
                                <td>@item.DateInception</td>
                                <td>@item.DateWEF</td>
                                <td>@item.PincodeStr</td>
                                <td>@item.StatusStr</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div><!-- /.modal-content -->
