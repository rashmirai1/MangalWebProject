@model IList<MangalWebProject.Models.Entity.Mst_City>
@using MangalWebProject.Models.Entity
<div class="modal-content">
    <div class="modal-body" style="height:inherit; overflow:auto;">
        <div class="panel-body panel-no-padding" style="height:inherit; overflow:auto;">
            <div id="demo">
                <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover table-fixed-header m0" id="example">
                    <thead>
                        <tr>
                            <th>City Name</th>
                            <th>State Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Mst_City item in Model)
                        {
                            <tr class="gradeX" onclick='window.document.location="/City/GetCityById?ID=@item.Ct_Id"'>
                                <td>@item.Ct_Desc</td>
                                <td>@item.Mst_State.St_Desc</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div><!-- /.modal-content -->

