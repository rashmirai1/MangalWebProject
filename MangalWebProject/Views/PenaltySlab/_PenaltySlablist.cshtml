@model IList<MangalWebProject.Models.PenaltySlabViewModel>
@using MangalWebProject.Models
<div class="modal-content">
    <div class="modal-body" style="height:inherit; overflow:auto;">
        <div class="panel-body panel-no-padding" style="height:inherit; overflow:auto;">
            <div id="demo">
                <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover table-fixed-header m0" id="example">
                    <thead>
                        <tr>
                            <th>Date WEF</th>
                            <th>Penalty</th>
                            <th>Penalty Account Head</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (PenaltySlabViewModel item in Model)
                        {
                            <tr class="gradeX" onclick='window.document.location="/PenaltySlab/GetPenaltySlabById?ID=@item.ID"'>
                                <td>@item.Datewef</td>
                                <td>@item.PenaltyAmount</td>
                                <td>@item.AccountHeadStr</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div><!-- /.modal-content -->

